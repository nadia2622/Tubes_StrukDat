{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C++: g++.exe build with SQLite3",
      "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
      "args": [
        "-g",
        "-std=c++11",
        "${file}",
        "-o",
        "${fileDirname}\\output\\${fileBasenameNoExtension}.exe",
        "-I",
        "C:\\msys64\\ucrt64\\include",
        "-L",
        "C:\\msys64\\ucrt64\\lib",
        "-lsqlite3",
        "-static-libgcc",
        "-static-libstdc++"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
